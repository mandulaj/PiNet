doctype html

html
  head
    title PiNet
    link(type='text/css', rel='stylesheet', href='/static/css/style.css')
    link(type='text/css', rel='stylesheet', href='/static/modules/bootstrap/dist/css/bootstrap.min.css')

  body(unselectable='on')
    #top
      h3 Welcome to PiNet control room
      a#chpassword(href='/user/changepassword') Change Password
      #recIndic(style='display: none;')
      a#logout(href='/logout') Logout

    .cover
    .rec_window
      | The Recordings
      #rec_window_close
      #rec_window_content

    .content
      .sideBar
        .showsideBar
          span &gt;
        .lightSwitch
          | Off
        span Lights
        .ai
          | Off
        span AI
        .rec
          | Off
        span REC
        .rec_view
          | View
        span All Recordings

      .piStats.visible-sm.visible-md.visible-lg
        h4 Pi Stats
        h5 CPU
        span.stat_title Boot time:
        span#stat_boot.stat_val -
        br
        span.stat_title CPU Load:
        span#stat_load.stat_val 0%
        br
        h5 RAM
        span.stat_title Free RAM:
        span#stat_freeRam.stat_val 0%
        br
        span.stat_title Total RAM:
        span#stat_totalRam.stat_val 0GB
        br

      #stream
        #live LIVE
          div
        script(type='text/javascript')

      #slider
        #track
        #grabthing
          p#speedVal 100%

      #arrows
        table
          tr
            td
            td
              #upkey.arrowkey
            td
          tr
            td
              #leftkey.arrowkey
            td
              #downkey.arrowkey
            td
              #rightkey.arrowkey

      #cam_arrows
        table
          tr
            td
            td
              #cam_upkey.cam_arrowkey
            td
              #laser
          tr
            td
              #cam_leftkey.cam_arrowkey
            td
              #cam_default.cam_arrowkey
            td
              #cam_rightkey.cam_arrowkey
          tr
            td
            td
              #cam_downkey.cam_arrowkey
            td
      script(type='text/javascript').
        var upkey = document.getElementById("upkey");
        var downkey = document.getElementById("downkey");
        var leftkey = document.getElementById("leftkey");
        var rightkey = document.getElementById("rightkey");
        var cam_upkey = document.getElementById("cam_upkey");
        var cam_downkey = document.getElementById("cam_downkey");
        var cam_leftkey = document.getElementById("cam_leftkey");
        var cam_rightkey = document.getElementById("cam_rightkey");
        var cam_default = document.getElementById("cam_default");
        var slidthing = document.getElementById("grabthing");

  script(type='text/javascript', src='/static/modules/jquery/dist/jquery.min.js')
  script(type='text/javascript', src='/static/modules/jquery-ui/jquery-ui.min.js')
  script(type='text/javascript', src='/static/js/room.js')
  script(type='text/javascript', src='/static/modules/socket.io-client/socket.io.js')
  script(type='text/javascript', src='/static/js/key.js')
